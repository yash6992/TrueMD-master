<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_window"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:padding="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <RelativeLayout
        android:layout_width="match_parent" android:padding="16dp"
        android:layout_height="wrap_content" android:layout_marginTop="5dp"
        android:id="@+id/RLayout">


        <TextView
            android:id="@+id/tv2" android:text="Help us serve you better." android:layout_marginLeft="13dp" android:layout_marginStart="10dp"
            android:layout_width="wrap_content" android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" android:textSize="16dp"
            android:gravity="center_vertical|left"
            android:padding="2dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.45dp"
            android:id="@+id/blackline_md" android:orientation="horizontal"
            android:background="@color/monsoon" android:layout_below="@+id/tv2"
            android:layout_marginLeft="5dp" android:layout_marginTop="8dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp">
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent" android:visibility="visible" android:layout_marginTop="10dp" android:orientation="horizontal" android:layout_below="@+id/blackline_md"
            android:layout_height="wrap_content" android:id="@+id/wiz_gender_ll">
            <LinearLayout
                android:layout_width="0dp" android:layout_weight="1" android:orientation="horizontal"
                android:layout_height="90dp"  android:gravity="center" >
            <ImageView
                android:layout_width="87dp" android:padding="9dp"
                android:layout_height="87dp"   android:background="@drawable/shape_solid_circle_dark"
                android:id="@+id/male" android:src="@drawable/male" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="0dp" android:orientation="horizontal"
            android:layout_height="90dp"  android:gravity="center" android:layout_weight="1">
            <ImageView
                android:layout_width="87dp"  android:background="@drawable/shape_solid_circle_dark"
                android:layout_height="87dp" android:padding="9dp" android:src="@drawable/female"
                android:id="@+id/female" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content" android:id="@+id/wiz_email_rl"
            android:layout_height="wrap_content" android:layout_below="@+id/wiz_gender_ll">

        <!--  Password Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent" android:id="@+id/wiz_email_alt"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/wiz_email_alt_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginLeft="14dp" android:layout_marginRight="14dp"
                android:layout_marginBottom="4dp" android:textSize="14dp"
                android:inputType="textEmailAddress" android:textColor="@color/windowBackground"
                android:hint="Enter your email-id (optional)"/>
        </android.support.design.widget.TextInputLayout>

        <com.zl.reik.dilatingdotsprogressbar.DilatingDotsProgressBar
            android:id="@+id/wiz_progress" android:layout_marginTop="8dp" android:layout_marginBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:radius="2dp"
            android:color="@color/windowBackground"
            app:dd_numDots="6" android:layout_centerInParent="true"
            app:dd_scaleMultiplier="2.3" app:dd_animationDuration="500"
            app:dd_horizontalSpacing="12dp" android:layout_below="@+id/wiz_email_alt"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_wiz_submit"
            android:layout_width="fill_parent"
            android:layout_height="56dp" android:textColor="@color/white"
            android:layout_marginTop="12dp" android:layout_gravity="bottom" android:padding="5dp"
            android:layout_marginBottom="0dp" android:layout_below="@+id/wiz_progress"
            android:text="SUBMIT"
             />

        <TextView
            android:layout_width="wrap_content" android:paddingLeft="8dp" android:layout_below="@+id/btn_wiz_submit"  android:textColor="@color/iron" android:textSize="12dp"
            android:layout_height="wrap_content" android:id="@+id/nospam" android:text="Don't worry, We promise we won't spam your inbox." />

        </RelativeLayout>
    </RelativeLayout>





</android.support.v7.widget.CardView>