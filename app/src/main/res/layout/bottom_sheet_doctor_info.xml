<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:id="@+id/popup_window"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <RelativeLayout
        android:layout_width="match_parent" android:padding="0dp"
        android:layout_height="wrap_content" android:layout_marginTop="5dp"
        android:id="@+id/RLayout">


        <TextView
            android:id="@+id/tv2" android:text="Loading..." android:layout_marginLeft="13dp" android:layout_marginStart="10dp"
            android:layout_width="wrap_content" android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" android:textSize="20sp"
            android:gravity="center_vertical|left"
            android:padding="2dp" />


        <TextView
            android:id="@+id/txt_medname" android:text="Loading..." android:layout_alignBaseline="@+id/tv2"
            android:layout_toRightOf="@+id/tv2" android:layout_marginLeft="3dp" android:layout_marginStart="3dp"
            android:layout_width="wrap_content" android:textColor="@color/monsoon"
            android:layout_height="wrap_content" android:textSize="14sp"
            android:padding="2dp" android:layout_marginRight="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.35dp"
            android:id="@+id/blackline_md" android:orientation="horizontal"
            android:background="@color/monsoon" android:layout_below="@+id/txt_medname"
            android:layout_marginLeft="15dp" android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp">
        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent" android:layout_marginTop="50dp"
        android:layout_height="130dp">
        <LinearLayout
            android:layout_width="match_parent" android:padding="5dp"
            android:layout_height="match_parent" android:layout_marginTop="10dp" android:layout_marginLeft="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content" android:orientation="horizontal"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content" android:textSize="13dp"
                    android:layout_height="wrap_content" android:textColor="@color/monsoon"
                    android:text="DOCTOR'S ADDRESS: " android:padding="3dp"
                    android:id="@+id/d_address_h" />

                <TextView
                    android:layout_width="wrap_content" android:textSize="12dp"
                    android:layout_height="wrap_content" android:textColor="@color/windowBackground"
                    android:text="New Text" android:layout_marginLeft="20dp"
                    android:id="@+id/d_address" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content" android:orientation="horizontal"
                android:layout_height="wrap_content" android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content" android:textSize="13dp"
                    android:layout_height="wrap_content" android:textColor="@color/monsoon"
                    android:text="CONTACT: " android:padding="3dp"
                    android:id="@+id/contact_h" />

                <TextView
                    android:layout_width="wrap_content" android:textSize="12dp"
                    android:layout_height="wrap_content" android:textColor="@color/windowBackground"
                    android:text="New Text" android:layout_marginLeft="20dp"
                    android:id="@+id/contact" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content" android:orientation="horizontal"
                android:layout_height="wrap_content" android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content" android:textSize="13dp"
                    android:layout_height="wrap_content" android:textColor="@color/monsoon"
                    android:text="REGISTRATION: " android:padding="3dp"
                    android:id="@+id/registration_h" />

                <TextView
                    android:layout_width="wrap_content" android:textSize="12dp"
                    android:layout_height="wrap_content" android:textColor="@color/windowBackground"
                    android:text="New Text" android:layout_marginLeft="20dp"
                    android:id="@+id/registration" />

            </LinearLayout>



        </LinearLayout>
    </ScrollView>




</android.support.v7.widget.CardView>