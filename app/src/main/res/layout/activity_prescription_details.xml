<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@color/steel"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent" android:background="@color/steel"
        android:layout_height="48dp" android:orientation="horizontal" android:id="@+id/pd_title">


        <ImageButton
            android:layout_width="30dp" android:layout_centerVertical="true" android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            android:layout_height="30dp" android:background="@drawable/ic_arrow_back_p_24dp"
            android:id="@+id/pd_backImageButton" />

        <TextView
            android:layout_width="match_parent" android:textColor="@color/windowBackground"
            android:layout_height="30dp" android:textSize="18dp"
            android:text="PRESCRIPTION DETAILS"
            android:id="@+id/pd_title_tv" android:gravity="center_horizontal|center_vertical"
            android:layout_alignTop="@+id/pd_backImageButton"
            android:layout_alignLeft="@+id/pd_backImageButton"
            android:layout_alignStart="@+id/pd_backImageButton" />


    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content" android:layout_below="@+id/pd_title" android:background="@color/white"
        android:layout_height="wrap_content" android:layout_margin="10dp" android:id="@+id/ccc">

    <RelativeLayout
        android:orientation="vertical"   android:layout_width="match_parent" android:id="@+id/mainpd"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"  android:paddingBottom="10dp"
            android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingTop="10dp"
            android:layout_height="wrap_content" android:id="@+id/rltop" android:layout_margin="0dp">


            <TextView
                android:layout_width="wrap_content" android:padding="2dp" android:layout_marginLeft="12dp"
                android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignTop="@+id/pd_pres_no_h"
                android:text="New Text" android:textSize="15.5dp" android:textColor="@color/windowBackground"
                android:id="@+id/pd_date" />

            <TextView
                android:layout_width="wrap_content" android:padding="2dp" android:textColor="@color/monsoon"
                android:layout_height="wrap_content"  android:layout_marginRight="2dp" android:layout_centerVertical="true"
                android:text="PRESCRIPTION NO: " android:textSize="11dp" android:layout_toLeftOf="@+id/pd_pres_no"
                android:id="@+id/pd_pres_no_h" />

            <TextView
                android:layout_width="wrap_content" android:padding="2dp" android:textColor="@color/oil"
                android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_marginRight="12dp"
                android:text="New Text" android:textSize="11dp" android:layout_centerVertical="true"
                android:id="@+id/pd_pres_no" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent" android:orientation="horizontal" android:id="@+id/b1" android:background="@color/windowBackground"
            android:layout_height="0.2dp" android:layout_marginTop="0dp" android:layout_below="@+id/rltop" android:layout_marginBottom="5dp">
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent" android:paddingLeft="15dp" android:paddingRight="10dp" android:paddingTop="10dp"  android:paddingBottom="10dp" android:id="@+id/rlbottom"
            android:layout_height="wrap_content" android:layout_below="@+id/b1">

            <LinearLayout
                android:layout_width="match_parent" android:padding="0dp" android:gravity="center"
                android:layout_height="wrap_content" android:id="@+id/pd_ll_pd">

                <LinearLayout
                    android:layout_width="wrap_content" android:layout_margin="0dp" android:background="@drawable/shape11"
                    android:layout_height="wrap_content"  android:padding="7dp" android:id="@+id/pd_patient_image_h">
                    <ImageView
                        android:layout_width="16dp" android:layout_marginBottom="2dp"
                        android:layout_height="16dp"  android:src="@drawable/ic_user_icon"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp" android:layout_weight="1"  android:layout_marginLeft="10dp"
                    android:layout_height="40dp" android:textSize="13dp" android:layout_marginTop="10dp"
                    android:text="New Text" android:layout_toRightOf="@+id/pd_patient_image_h"
                    android:id="@+id/pd_username" android:textColor="@color/oil" />


                <LinearLayout
                    android:layout_width="wrap_content"   android:background="@drawable/shape11" android:layout_toRightOf="@id/pd_patient_image_h"
                    android:layout_height="wrap_content"  android:padding="7dp" android:id="@+id/pd_doctor_image_h"  android:layout_marginBottom="0dp" >
                    <ImageView
                        android:layout_width="16dp" android:layout_marginBottom="2dp"
                        android:layout_height="16dp" android:src="@drawable/ic_doctor_icon"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp" android:layout_weight="1"   android:layout_marginTop="10dp" android:layout_alignTop="@+id/pd_patient_image_h"
                    android:layout_height="40dp" android:layout_marginLeft="10dp"
                    android:text="New Text" android:layout_toRightOf="@+id/pd_doctor_image_h"
                    android:id="@+id/pd_doctorname" android:textSize="13dp" android:textColor="@color/oil" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content" android:visibility="gone" android:layout_marginTop="16dp" android:textColor="@color/monsoon" android:layout_below="@+id/pd_ll_pd" android:layout_alignLeft="@+id/pd_ll_pd"
                android:layout_height="wrap_content" android:id="@+id/pd_document" android:text="Click to see uploaded documents for this prescription" android:textSize="12dp"/>
            <TextView
                android:layout_width="wrap_content" android:layout_marginTop="10dp" android:textColor="@color/aluminum" android:layout_below="@+id/pd_document" android:layout_alignLeft="@+id/pd_document"
                android:layout_height="wrap_content" android:id="@+id/pd_comments" android:text="Add comments here if any." android:textSize="10.5dp"/>


        </RelativeLayout>




    </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ListView
        android:id="@+id/pd_listView" android:layout_marginTop="0dp" android:layout_below="@+id/ccc"
        android:layout_width="wrap_content" android:padding="10dp"  android:background="@color/white"
        android:layout_height="wrap_content" android:divider="@color/windowBackground" >
    </ListView>




</RelativeLayout>