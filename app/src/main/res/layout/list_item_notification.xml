<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:background="@color/steel"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent" android:id="@+id/mainpl"
        android:layout_height="wrap_content" >

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content" android:id="@+id/cccc"
            android:layout_height="wrap_content" android:layout_marginTop="0dp" android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp" >

        <RelativeLayout
            android:layout_width="match_parent"  android:paddingBottom="10dp"
            android:paddingLeft="0dp" android:paddingRight="10dp" android:paddingTop="10dp"
            android:layout_height="wrap_content" android:id="@+id/n_rltop" android:layout_margin="0dp">


            <TextView
                android:layout_width="wrap_content" android:padding="2dp"
                android:layout_height="wrap_content"
                android:text="New Text" android:textSize="14dp" android:textColor="@color/windowBackground"
                android:id="@+id/n_title" android:layout_toLeftOf="@+id/n_order_no_h"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/title_text_view"
                android:layout_alignStart="@+id/title_text_view" />

            <TextView
                android:layout_width="wrap_content" android:padding="2dp" android:textColor="@color/monsoon"
                android:layout_height="wrap_content"  android:layout_marginRight="72dp" android:layout_alignBottom="@+id/n_title"
                android:text="ORDER NO: " android:textSize="11dp" android:layout_alignParentRight="true"
                android:id="@+id/n_order_no_h" />

            <TextView
                android:layout_width="wrap_content" android:padding="2dp" android:textColor="@color/oil" android:layout_alignBottom="@+id/n_title"
                android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_marginRight="20dp"
                android:text="New Text" android:textSize="11dp"
                android:id="@+id/n_order_no" />

            <TextView
                android:id="@+id/title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_below="@+id/n_title"
                android:layout_margin="16dp"
                android:textSize="12.5sp" android:text="Message content ..."
                />


        </RelativeLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent" android:background="@color/steel" android:orientation="horizontal" android:id="@+id/b9"
            android:layout_height="10dp" android:layout_marginTop="0dp" android:layout_below="@+id/cccc" android:layout_marginBottom="0dp">
        </LinearLayout>
    </RelativeLayout>



    <Button
        android:id="@+id/undo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UNDO"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:layout_gravity="end|center_vertical"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        />

    <!-- quick and dirty divider -->
    <LinearLayout
        android:layout_width="match_parent" android:orientation="horizontal" android:id="@+id/b2"
        android:layout_height="10dp" android:layout_marginTop="0dp" android:layout_below="@+id/cccc" android:layout_marginBottom="0dp">
    </LinearLayout>



</FrameLayout>