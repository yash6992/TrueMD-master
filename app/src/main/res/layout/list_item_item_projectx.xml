<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/toolbar_bg"
    android:layout_height="wrap_content"
    android:orientation="vertical" android:padding="3dp">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp">



        <RelativeLayout
            android:layout_width="match_parent" android:padding="10dp"
            android:layout_height="wrap_content" android:background="@color/white">

            <com.truemdhq.projectx.views.TextViewFont2Medium
                android:layout_width="wrap_content" android:textColor="@color/primary_blue"
                android:layout_height="wrap_content" android:id="@+id/item_name" android:text="Product Name"/>

            <ImageView
                android:layout_width="25dp" android:padding="3dp" android:layout_alignRight="@+id/arrow"
                android:layout_height="25dp" android:id="@+id/product_or_service" android:layout_alignTop="@+id/item_name"
                android:src="@drawable/icic_money_out_cash" android:visibility="gone"/>

            <LinearLayout
                android:layout_width="wrap_content" android:visibility="visible" android:orientation="horizontal" android:gravity="center_vertical"
                android:layout_height="wrap_content" android:id="@+id/barcode_ll" android:layout_below="@+id/item_name">

                <ImageView
                    android:layout_width="30dp" android:padding="5dp"
                    android:layout_height="30dp"
                    android:src="@drawable/barcode"/>

                <com.truemdhq.projectx.views.TextViewFont1Small
                    android:layout_width="wrap_content" android:id="@+id/item_barcode"  android:text=" ISBN" android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" android:textColor="@color/disabled"  />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content" android:orientation="horizontal" android:layout_alignTop="@+id/item_name"
                android:layout_height="wrap_content" android:layout_alignParentRight="true" android:id="@+id/quantityLL">

                <ImageView
                    android:layout_width="25dp" android:padding="6dp"
                    android:layout_height="25dp" android:id="@+id/minus"
                    android:src="@drawable/icic_money_minus"/>

                <com.truemdhq.projectx.views.TextViewFont2Medium
                    android:layout_width="wrap_content" android:textColor="@color/primary_violet" android:text="1"
                    android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_gravity="center"
                     android:layout_marginRight="5dp" android:id="@+id/item_quantity"/>


                <ImageView
                    android:layout_width="25dp" android:padding="6dp"
                    android:layout_height="25dp" android:id="@+id/plus"
                    android:src="@drawable/icic_money_plus"/>

            </LinearLayout>


            <com.truemdhq.projectx.views.TextViewFont2Medium
                android:layout_width="wrap_content" android:text="Rs. 0.00" android:layout_marginTop="5dp" android:textColor="@color/primary_green"
                android:layout_height="wrap_content" android:id="@+id/item_amount" android:layout_below="@+id/barcode_ll" />

            <ImageView
                android:layout_width="25dp" android:layout_alignParentRight="true"
                android:layout_height="25dp"  android:padding="4dp" android:layout_alignBottom="@+id/item_amount"
                android:src="@drawable/ic_arrow_right_cta_17_dp" android:id="@+id/arrow"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>