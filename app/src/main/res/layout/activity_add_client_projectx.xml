<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/window_bg">

    <RelativeLayout
        android:layout_width="match_parent" android:id="@+id/main_toolbar"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/toolbar"
            android:background="@color/header_bg">
            <ImageView
                android:layout_width="30dp" android:layout_margin="10dp"
                android:layout_height="30dp" android:padding="3dp"
                android:id="@+id/btn_back" android:src="@drawable/icic_nav_back_button"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <com.truemdhq.projectx.views.TextViewFont3Medium
                android:layout_width="140dp" android:layout_centerInParent="true" android:layout_margin="12dp"
                android:layout_height="wrap_content" android:textColor="@color/primary_violet" android:layout_marginTop="6dp"
                android:text="Add Client"  android:gravity="center"
                android:id="@+id/hf_title"  />



        </RelativeLayout>

        <View
            android:layout_width="match_parent" android:layout_below="@+id/toolbar"
            android:layout_height="3dp" android:background="@drawable/shape7" />

    </RelativeLayout>

    <com.emilsjolander.components.StickyScrollViewItems.StickyScrollView
        android:layout_width="match_parent" android:layout_marginBottom="55dp"
        android:layout_height="fill_parent" android:background="@color/toolbar_bg"
        android:layout_below="@+id/main_toolbar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content" android:id="@+id/description"  android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" android:padding="5dp">

            <ImageView
                android:layout_width="50dp" android:id="@+id/image_client"
                android:layout_height="50dp" android:padding="5dp"
                android:src="@drawable/store"/>

            <com.truemdhq.projectx.views.TextViewFont1Medium
                android:layout_width="wrap_content" android:text="Fill in the client details."
                android:layout_height="wrap_content" android:textColor="@color/disabled" android:paddingRight="20dp"
                android:layout_centerVertical="true" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/image_client"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent" android:layout_below="@+id/description" android:id="@+id/client_name"
            android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_marginTop="15dp"
            android:layout_height="wrap_content" android:padding="0dp" >

            <com.truemdhq.projectx.views.EditTextProjectX
                android:id="@+id/nameET"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent" android:layout_below="@+id/client_name" android:id="@+id/client_address"
            android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_marginTop="15dp"
            android:layout_height="wrap_content" android:padding="0dp" >

            <com.truemdhq.projectx.views.EditTextProjectX
                android:id="@+id/addressET"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent" android:layout_below="@+id/client_address" android:id="@+id/client_tax"
            android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_marginTop="15dp"
            android:layout_height="wrap_content" android:padding="0dp" >

            <com.truemdhq.projectx.views.EditTextProjectX
                android:id="@+id/taxET"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <com.truemdhq.projectx.views.TextViewFont1Medium
            android:layout_width="wrap_content" android:text="Contact Information" android:layout_below="@+id/client_tax"
            android:layout_height="wrap_content" android:textColor="@color/primary_violet"
            android:layout_marginTop="15dp" android:layout_marginLeft="15dp" android:id="@+id/contact_details"/>



            <RelativeLayout
                android:layout_width="match_parent" android:layout_below="@+id/contact_details" android:id="@+id/client_phoneNo"
                android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_marginTop="15dp"
                android:layout_height="wrap_content" android:padding="0dp" >

                <com.truemdhq.projectx.views.EditTextProjectX
                    android:id="@+id/phoneNoET"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent" android:layout_below="@+id/client_phoneNo" android:id="@+id/client_email"
            android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content" android:padding="0dp" >

            <com.truemdhq.projectx.views.EditTextProjectX
                android:id="@+id/emailET"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        </RelativeLayout>






    </com.emilsjolander.components.StickyScrollViewItems.StickyScrollView>


    <RelativeLayout
        android:layout_width="match_parent" android:background="@color/primary_blue" android:layout_marginTop="15dp"
        android:layout_height="55dp" android:id="@+id/btn_bottom" android:layout_alignParentBottom="true" >

        <com.truemdhq.projectx.views.TextViewFont2Medium
            android:layout_width="wrap_content" android:layout_centerInParent="true"
            android:layout_height="wrap_content" android:text="Confirm" android:textColor="@color/white"/>

        <ImageView
            android:layout_width="22dp" android:layout_margin="10dp"
            android:layout_height="22dp" android:padding="4dp"
            android:id="@+id/btn_img" android:src="@drawable/ic_arrow_right_white"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>




</RelativeLayout>