<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:id="@+id/popup_window"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <RelativeLayout
        android:layout_width="match_parent" android:padding="0dp"
        android:layout_height="wrap_content" android:layout_marginTop="5dp"
        android:id="@+id/RLayout">


        <TextView
            android:id="@+id/tv2" android:text="Loading..." android:layout_marginLeft="13dp" android:layout_marginStart="10dp"
            android:layout_width="wrap_content" android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" android:textSize="20sp"
            android:gravity="center_vertical|left"
            android:padding="2dp" />


        <TextView
            android:id="@+id/txt_medname" android:text="Loading..." android:layout_alignBaseline="@+id/tv2"
            android:layout_toRightOf="@+id/tv2" android:layout_marginLeft="3dp" android:layout_marginStart="3dp"
            android:layout_width="wrap_content" android:textColor="@color/monsoon"
            android:layout_height="wrap_content" android:textSize="14sp"
            android:padding="2dp" android:layout_marginRight="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.35dp"
            android:id="@+id/blackline_md" android:orientation="horizontal"
            android:background="@color/monsoon" android:layout_below="@+id/txt_medname"
            android:layout_marginLeft="15dp" android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp">
        </LinearLayout>

    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content" android:id="@+id/hhsv_pd_bs" android:layout_marginTop="60dp"
        android:layout_height="wrap_content" android:layout_below="@id/your_order_co" >


        <LinearLayout
            android:layout_width="wrap_content" android:orientation="horizontal"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="120dp" android:id="@+id/pdbsImage0"
                android:layout_height="120dp" android:layout_margin="3.5dp" />
            <ImageView
                android:layout_width="120dp" android:id="@+id/pdbsImage1"
                android:layout_height="120dp" android:layout_margin="3.5dp" />
            <ImageView
                android:layout_width="120dp" android:id="@+id/pdbsImage2"
                android:layout_height="120dp" android:layout_margin="3.5dp" />
            <ImageView
                android:layout_width="120dp" android:id="@+id/pdbsImage3"
                android:layout_height="120dp" android:layout_margin="3.5dp" />
            <ImageView
                android:layout_width="120dp" android:id="@+id/pdbsImage4"
                android:layout_height="120dp" android:layout_margin="3.5dp" />
            <ImageView
                android:layout_width="120dp" android:id="@+id/pdbsImage5"
                android:layout_height="120dp" android:layout_margin="3.5dp" />
            <ImageView
                android:layout_width="120dp" android:id="@+id/pdbsImage6"
                android:layout_height="120dp" android:layout_margin="3.5dp" />
            <ImageView
                android:layout_width="120dp" android:id="@+id/pdbsImage7"
                android:layout_height="120dp" android:layout_margin="3.5dp" />
            <ImageView
                android:layout_width="120dp" android:id="@+id/pdbsImage8"
                android:layout_height="120dp" android:layout_margin="3.5dp" />
            <ImageView
                android:layout_width="120dp" android:id="@+id/pdbsImage9"
                android:layout_height="120dp" android:layout_margin="3.5dp" />
        </LinearLayout>
    </HorizontalScrollView>





</android.support.v7.widget.CardView>