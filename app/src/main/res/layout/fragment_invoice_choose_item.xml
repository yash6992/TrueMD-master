<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content" android:id="@+id/item_description"  android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" android:padding="5dp" android:layout_below="@+id/main_toolbar">

        <ImageView
            android:layout_width="50dp" android:id="@+id/image_client"
            android:layout_height="50dp" android:padding="5dp"
            android:src="@drawable/checklist"/>

        <com.truemdhq.projectx.views.TextViewFont1Medium
            android:layout_width="wrap_content" android:text="Choose an item and its quantity for this invoice"
            android:layout_height="wrap_content" android:textColor="@color/disabled"
            android:layout_centerVertical="true" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/image_client"/>



    </RelativeLayout>



    <ListView
        android:layout_width="match_parent" android:id="@+id/list_item"
        android:layout_height="wrap_content" android:layout_below="@+id/item_description">

    </ListView>

</RelativeLayout>