<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView android:layout_width="match_parent"

        android:id="@+id/popup_pincode" android:layout_below="@+id/popup_window"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
        android:padding="0dp"
        >



        <RelativeLayout
            android:layout_width="match_parent" android:padding="10dp"
            android:layout_height="wrap_content" android:layout_marginTop="0dp"
            android:id="@+id/pro_pin_RLayout">





            <RelativeLayout
                android:layout_width="wrap_content" android:id="@+id/pro_pincode_rl"
                android:layout_height="wrap_content" >


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent" android:id="@+id/pro_pincode_trl"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp">
                    <EditText android:id="@+id/pro_pincode_ET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginLeft="14dp" android:layout_marginRight="14dp"
                        android:layout_marginBottom="0dp" android:textSize="14dp"
                        android:inputType="number" android:textColor="@color/windowBackground"
                        android:hint="Enter pincode" android:maxLines="1" android:maxLength="6"/>
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content" android:paddingLeft="8dp" android:textSize="12dp" android:textColor="@color/iron" android:layout_below="@+id/pro_pincode_trl"
                    android:layout_height="wrap_content" android:id="@+id/pro_pincode" android:text="Check availability for your pincode." />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent" android:layout_below="@+id/pro_pincode_rl" android:orientation="vertical"
                android:layout_height="wrap_content"  android:gravity="center_horizontal" android:id="@+id/pro_btn_ll">

                <com.zl.reik.dilatingdotsprogressbar.DilatingDotsProgressBar
                    android:id="@+id/pro_progress" android:layout_marginTop="8dp" android:layout_marginBottom="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:radius="2dp"
                    android:color="@color/windowBackground"
                    app:dd_numDots="6" android:layout_centerInParent="true"
                    app:dd_scaleMultiplier="2.3" app:dd_animationDuration="500"
                    app:dd_horizontalSpacing="12dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent" android:orientation="horizontal"
                    android:layout_height="wrap_content" android:layout_marginTop="8dp">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_pro_back" android:layout_weight="1"
                    android:layout_width="0dp" android:backgroundTint="@color/aluminum"
                    android:layout_height="56dp" android:textColor="@color/white"
                    android:layout_margin="4dp" android:layout_gravity="bottom" android:padding="5dp"
                    android:layout_marginBottom="0dp"
                    android:text="BACK"
                    />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_pro_submit" android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="56dp" android:textColor="@color/white"
                    android:layout_margin="4dp" android:layout_gravity="bottom" android:padding="5dp"
                    android:layout_marginBottom="0dp"
                    android:text="UPDATE"
                    />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>




    </android.support.v7.widget.CardView>





</LinearLayout>