<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/toolbar_bg"
    android:layout_height="wrap_content"
    android:orientation="vertical" android:padding="3dp">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview" android:elevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp">

        <RelativeLayout
            android:layout_width="match_parent" android:padding="10dp"
            android:layout_height="wrap_content" android:background="@color/white">

            <com.truemdhq.projectx.views.TextViewFont3Medium
                android:layout_width="wrap_content" android:id="@+id/invoice_no_h"
                android:layout_height="wrap_content" android:text="Vendor Name" android:textColor="@color/primary_violet"/>
            <com.truemdhq.projectx.views.TextViewFont3Medium
                android:layout_width="wrap_content" android:id="@+id/invoice_no" android:layout_toRightOf="@+id/invoice_no_h"
                android:layout_height="wrap_content" android:text="" android:textColor="@color/primary_violet"/>

            <com.truemdhq.projectx.views.TextViewFont1Small
                android:layout_width="fill_parent" android:text="email@id.com" android:singleLine="true" android:id="@+id/vendor_name" android:textColor="@color/disabled"
                android:layout_height="wrap_content" android:layout_below="@+id/invoice_no_h" />

            <com.truemdhq.projectx.views.TextViewFont3Large
                android:layout_width="wrap_content" android:id="@+id/balance_due" android:text="Rs. 0.00" android:textColor="@color/primary_green"
                android:layout_height="wrap_content" android:gravity="top"
                android:layout_alignTop="@+id/invoice_no"
                android:layout_alignParentEnd="true" />

            <LinearLayout
                android:layout_width="wrap_content" android:id="@+id/edit" android:orientation="horizontal"
                android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_below="@+id/balance_due">

                <ImageView
                    android:layout_width="21dp" android:src="@drawable/icic_edit"
                    android:layout_height="21dp" android:padding="0dp" android:id="@+id/status_img" />

                <com.truemdhq.projectx.views.TextViewFont1Medium
                    android:layout_width="wrap_content" android:id="@+id/status_text" android:textColor="@color/primary_blue"
                    android:layout_height="match_parent" android:layout_marginLeft="8dp" android:gravity="center" android:text="EDIT"/>

            </LinearLayout>

            <ImageView
                android:layout_width="22dp" android:padding="3dp"  android:layout_alignParentRight="true" android:layout_alignBottom="@+id/edit"
                android:layout_height="22dp" android:id="@+id/right_img" android:src="@drawable/ic_arrow_right" />



        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>