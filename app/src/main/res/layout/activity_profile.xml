<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:background="@color/steel"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sc" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent" android:background="@color/steel"
        android:layout_height="48dp" android:orientation="horizontal" android:id="@+id/pro_title">


        <ImageButton
            android:layout_width="30dp" android:layout_centerVertical="true" android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            android:layout_height="30dp" android:background="@drawable/ic_arrow_back_p_24dp"
            android:id="@+id/pro_backImageButton" />
       

        <TextView
            android:layout_width="match_parent" android:textColor="@color/windowBackground"
            android:layout_height="30dp" android:textSize="18dp"
            android:text="PROFILE"
            android:id="@+id/pro_title_tv" android:gravity="center_horizontal|center_vertical"
            android:layout_alignTop="@+id/pro_backImageButton"
            android:layout_alignLeft="@+id/pro_backImageButton"
            android:layout_alignStart="@+id/pro_backImageButton" />


    </RelativeLayout>

        <android.support.v7.widget.CardView android:layout_width="match_parent"

            android:id="@+id/popup_window_name" android:layout_below="@+id/pro_title"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
            android:padding="0dp"
            >



            <RelativeLayout
                android:layout_width="match_parent" android:padding="16dp"
                android:layout_height="wrap_content" android:layout_marginTop="0dp"
                android:id="@+id/pro_name_RLayout">


                <TextView
                    android:id="@+id/pro_name_tv2" android:text="Change name." android:layout_marginLeft="13dp" android:layout_marginStart="10dp"
                    android:layout_width="wrap_content" android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" android:textSize="16dp" android:visibility="gone"
                    android:gravity="center_vertical|left"
                    android:padding="0dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.45dp"
                    android:id="@+id/pro_name_blackline_md" android:orientation="horizontal"
                    android:background="@color/monsoon" android:layout_below="@+id/pro_name_tv2"
                    android:layout_marginLeft="5dp" android:layout_marginTop="8dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp" android:visibility="gone"
                    android:layout_marginRight="5dp">
                </LinearLayout>




                <RelativeLayout
                    android:layout_width="wrap_content" android:id="@+id/pro_name_rl"
                    android:layout_height="wrap_content" android:layout_below="@+id/pro_name_blackline_md">

                    <!--  Password Label -->
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent" android:id="@+id/pro_name"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp">
                        <EditText android:id="@+id/pro_name_ET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginLeft="14dp" android:layout_marginRight="14dp"
                            android:layout_marginBottom="4dp" android:textSize="14dp"
                            android:inputType="textEmailAddress" android:textColor="@color/windowBackground"
                            android:hint="Enter name"/>
                    </android.support.design.widget.TextInputLayout>


                     </RelativeLayout>
            </RelativeLayout>





        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView android:layout_width="match_parent"

        android:id="@+id/popup_window" android:layout_below="@+id/popup_window_name"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="0dp"
        >



        <RelativeLayout
            android:layout_width="match_parent" android:padding="16dp"
            android:layout_height="wrap_content" android:layout_marginTop="0dp"
            android:id="@+id/RLayout">


            <TextView
                android:id="@+id/tv2" android:text="Change profile settings." android:layout_marginLeft="13dp" android:layout_marginStart="10dp"
                android:layout_width="wrap_content" android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" android:textSize="16dp" android:visibility="gone"
                android:gravity="center_vertical|left"
                android:padding="0dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.45dp"
                android:id="@+id/blackline_md" android:orientation="horizontal"
                android:background="@color/monsoon" android:layout_below="@+id/tv2"
                android:layout_marginLeft="5dp" android:layout_marginTop="8dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp" android:visibility="gone"
                android:layout_marginRight="5dp">
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent" android:visibility="visible" android:layout_marginTop="10dp" android:orientation="horizontal" android:layout_below="@+id/blackline_md"
                android:layout_height="wrap_content" android:id="@+id/pro_gender_ll">
                <LinearLayout
                    android:layout_width="0dp" android:layout_weight="1" android:orientation="horizontal"
                    android:layout_height="90dp"  android:gravity="center" >
                    <ImageView
                        android:layout_width="87dp" android:padding="9dp"
                        android:layout_height="87dp"   android:background="@drawable/shape_solid_circle_dark"
                        android:id="@+id/male" android:src="@drawable/male" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp" android:orientation="horizontal"
                    android:layout_height="90dp"  android:gravity="center" android:layout_weight="1">
                    <ImageView
                        android:layout_width="87dp"  android:background="@drawable/shape_solid_circle_dark"
                        android:layout_height="87dp" android:padding="9dp" android:src="@drawable/female"
                        android:id="@+id/female" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content" android:id="@+id/pro_email_rl"
                android:layout_height="wrap_content" android:layout_below="@+id/pro_gender_ll">

                <!--  Password Label -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent" android:id="@+id/pro_email_alt"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp">
                    <EditText android:id="@+id/pro_email_alt_ET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginLeft="14dp" android:layout_marginRight="14dp"
                        android:layout_marginBottom="4dp" android:textSize="14dp"
                        android:inputType="textEmailAddress" android:textColor="@color/windowBackground"
                        android:hint="Enter your email-id"/>
                </android.support.design.widget.TextInputLayout>

               
                <TextView
                    android:layout_width="wrap_content" android:paddingLeft="8dp" android:layout_below="@+id/pro_email_alt"  android:textColor="@color/iron" android:textSize="12dp"
                    android:layout_height="wrap_content" android:id="@+id/nospam" android:text="Don't worry, We promise we won't spam your inbox." />

            </RelativeLayout>
        </RelativeLayout>





    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView android:layout_width="match_parent"

            android:id="@+id/popup_pincode" android:layout_below="@+id/popup_window"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
            android:padding="0dp"
            >



            <RelativeLayout
                android:layout_width="match_parent" android:padding="16dp"
                android:layout_height="wrap_content" android:layout_marginTop="0dp"
                android:id="@+id/pro_pin_RLayout">





                <RelativeLayout
                    android:layout_width="wrap_content" android:id="@+id/pro_pincode_rl"
                    android:layout_height="wrap_content" >


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent" android:id="@+id/pro_pincode_trl"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp">
                        <EditText android:id="@+id/pro_pincode_ET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginLeft="14dp" android:layout_marginRight="14dp"
                            android:layout_marginBottom="4dp" android:textSize="14dp"
                            android:inputType="number" android:textColor="@color/windowBackground"
                            android:hint="Enter pincode" android:maxLines="1" android:maxLength="6"/>
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content" android:paddingLeft="8dp" android:textSize="12dp" android:textColor="@color/iron" android:layout_below="@+id/pro_pincode_trl"
                        android:layout_height="wrap_content" android:id="@+id/pro_pincode" android:text="City, State\n\nDelivery conditions." />

                </RelativeLayout>
            </RelativeLayout>





        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent" android:layout_below="@+id/popup_pincode" android:orientation="vertical" android:layout_alignParentBottom="true"
            android:layout_height="wrap_content" android:gravity="center_horizontal" android:id="@+id/pro_btn_ll">

            <com.zl.reik.dilatingdotsprogressbar.DilatingDotsProgressBar
                android:id="@+id/pro_progress" android:layout_marginTop="14dp" android:layout_marginBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:radius="2dp"
                android:color="@color/windowBackground"
                app:dd_numDots="6" android:layout_centerInParent="true"
                app:dd_scaleMultiplier="2.3" app:dd_animationDuration="500"
                app:dd_horizontalSpacing="12dp"
                />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_pro_submit"
                android:layout_width="fill_parent"
                android:layout_height="56dp" android:textColor="@color/white"
                android:layout_margin="16dp" android:layout_gravity="bottom" android:padding="5dp"
                android:layout_marginBottom="0dp"
                android:text="UPDATE"
                />

        </LinearLayout>

    </RelativeLayout>

   </ScrollView>



</RelativeLayout>