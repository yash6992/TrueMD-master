                            <ImageView
                                android:layout_width="50dp" android:layout_margin="10dp"
                                android:layout_height="50dp" android:layout_centerInParent="true"
                                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                                android:src="@drawable/orderpink"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/hf_imageView1" />

                            <LinearLayout
                                android:orientation="vertical" android:layout_toRightOf="@+id/hf_imageView1"
                                android:layout_width="wrap_content" android:layout_centerVertical="true"
                                android:layout_margin="28dp" android:paddingLeft="5dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                                    android:layout_height="wrap_content" android:layout_alignBottom="@+id/textView14"
                                    android:textColor="@color/windowBackground" android:textSize="16dp" android:textStyle="bold"
                                    android:text="ORDER MEDICINES"
                                    android:id="@+id/hf_textView15" />

                                <TextView
                                    android:layout_width="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/windowBackground" android:textSize="12dp" android:layout_marginTop="5dp"
                                    android:text="Scan your prescription or simply reorder"
                                    android:id="@+id/hf_textView14" />
                            </LinearLayout>
                        </RelativeLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"  android:id="@+id/hf_4" android:layout_below="@+id/hf_3"
                android:layout_height="wrap_content" android:layout_marginTop="4dp">

                <View
