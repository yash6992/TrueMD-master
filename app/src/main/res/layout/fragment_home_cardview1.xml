                <View
                    android:layout_width="10dp" android:id="@+id/l22" android:layout_below="@+id/hf_offers_h" android:layout_marginBottom="0dp" android:background="@color/accent_dark"
                    android:layout_height="2.8dp" android:layout_centerHorizontal="true" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent" android:id="@+id/hf_7" android:layout_below="@+id/hf_6"
                android:layout_height="wrap_content">

                <info.truemd.materialdesign.helper.SnappingHorizontalScrollView
                    android:id="@+id/scroll"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" android:layout_marginTop="0dp"
                    android:layout_weight="0.5">

                </info.truemd.materialdesign.helper.SnappingHorizontalScrollView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent" android:id="@+id/hf_8" android:layout_below="@+id/hf_7"
                android:layout_height="wrap_content" android:layout_marginTop="4dp">

                <View
                    android:layout_width="20dp" android:visibility="gone" android:layout_marginTop="8dp" android:id="@+id/l31" android:background="@color/accent_dark"
                    android:layout_height="1.8dp" android:layout_centerHorizontal="true" />
                <TextView
                    android:layout_width="wrap_content" android:layout_margin="6dp" android:layout_below="@+id/l31"
                    android:layout_height="wrap_content" android:layout_centerVertical="true"
                    android:text="KNOW MORE" android:layout_centerHorizontal="true" android:textColor="@color/windowBackground"
                    android:textSize="12dp" android:id="@+id/hf_knowmore_h"/>

                <View
                    android:layout_width="10dp" android:id="@+id/l32" android:layout_below="@+id/hf_knowmore_h" android:layout_marginBottom="0dp" android:background="@color/accent_dark"
                    android:layout_height="2.8dp" android:layout_centerHorizontal="true" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent" android:id="@+id/hf_9" android:layout_below="@+id/hf_8"
                android:layout_height="wrap_content" android:foreground="@drawable/custom_bg"
                android:clickable="true" >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent" android:layout_margin="8dp"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent" android:layout_marginTop="0dp"
                        android:layout_gravity="bottom" android:layout_below="@+id/cardview_home"
                        android:layout_alignParentBottom="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                            android:id="@+id/home_relative_layout4">


                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp" android:layout_marginTop="14dp"
                                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                                android:src="@drawable/ic_order4"
                                android:layout_marginLeft="20dp"
