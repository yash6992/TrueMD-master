                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:id="@+id/imageCameraOnSearchBar" android:background="@drawable/ic_search_white_24dp"
                            android:layout_alignParentEnd="true" android:layout_alignParentRight="true" android:layout_centerVertical="true"
                            android:layout_marginRight="20dp" android:layout_marginEnd="10dp" />

                    </RelativeLayout>
                </LinearLayout>

            </ir.afshin.stickyscrollviewlib.StickyHeader>









        </RelativeLayout>
    </ir.afshin.stickyscrollviewlib.StickyScrollView>
    <RelativeLayout
        android:layout_width="match_parent" android:visibility="gone" android:background="@drawable/button_purple_ghost" android:layout_above="@+id/home_relative_layout2"
        android:layout_height="wrap_content" android:layout_marginTop="0dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
        android:id="@+id/home_relative_layout1">


        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp" android:layout_centerInParent="true"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:src="@drawable/ic_local_pharmacy_white_24dp"
            android:layout_marginRight="15dp"
            android:id="@+id/imageView1" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_margin="8dp" android:paddingLeft="15dp"
            android:layout_marginStart="110dp" android:layout_marginLeft="110dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:layout_height="wrap_content" android:layout_alignBottom="@+id/textView14"
                android:textColor="@color/windowBackground" android:textSize="13dp" android:textStyle="bold"
                android:text="ORDER MEDICINES"
                android:id="@+id/textView15" />

            <TextView
                android:layout_width="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:layout_height="wrap_content"
                android:textColor="@color/windowBackground" android:textSize="9dp" android:layout_marginTop="5dp"
                android:text="Scan your prescription or simply reorder"
                android:id="@+id/textView14" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent" android:visibility="gone"  android:background="@drawable/button_purple_ghost" android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" android:layout_marginBottom="12dp" android:layout_marginTop="15dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
        android:id="@+id/home_relative_layout2">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" android:layout_centerInParent="true"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:src="@drawable/ic_alarm_white_24dp"
            android:layout_marginRight="14dp"
            android:id="@+id/imageView2" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_margin="8dp" android:paddingLeft="15dp"
            android:layout_marginStart="110dp" android:layout_marginLeft="110dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:layout_height="wrap_content" android:layout_alignBottom="@+id/textView24"
                android:textColor="@color/windowBackground" android:textSize="13dp" android:textStyle="bold"
                android:text="MEDICATION REMINDERS"
                android:id="@+id/textView25" />

            <TextView
                android:layout_width="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:layout_height="wrap_content"
                android:textColor="@color/windowBackground" android:textSize="9dp" android:layout_marginTop="5dp"
                android:text="Managing medicine reminders made easy "
                android:id="@+id/textView24" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent" android:visibility="gone" android:background="@drawable/button_purple_ghost"
        android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_marginTop="15dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="15dp"
        android:id="@+id/home_relative_layout3">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content" android:paddingLeft="15dp"
            android:layout_margin="8dp"
            android:layout_marginTop="12dp" android:layout_marginBottom="12dp"
            android:layout_marginStart="110dp" android:layout_marginLeft="110dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:layout_height="wrap_content" android:layout_alignBottom="@+id/textView34"
                android:textColor="@color/windowBackground" android:textSize="13dp" android:textStyle="bold"
                android:text="YOUR ORDERS"
                android:id="@+id/textView35" />

            <TextView
                android:layout_width="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:layout_height="wrap_content"
                android:textColor="@color/windowBackground" android:textSize="9dp" android:layout_marginTop="5dp"
                android:text="A detailed view of all your Orders"
                android:id="@+id/textView34" />
        </LinearLayout>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" android:layout_centerInParent="true"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:src="@drawable/ic_assignment_white_24dp"

            android:layout_marginRight="14dp"
            android:id="@+id/imageView3" />

    </RelativeLayout>

    <ir.afshin.stickyscrollviewlib.StickyScrollView
        android:layout_width="match_parent" android:id="@+id/hf_sticky_scroll" android:padding="6dp"
        android:layout_height="wrap_content" android:layout_below="@+id/image_button_drawer_home">

        <RelativeLayout
            android:layout_width="match_parent" android:id="@+id/hf_rel_scrolling"
            android:layout_height="wrap_content" android:padding="1dp" >

            <RelativeLayout
                android:layout_width="match_parent" android:id="@+id/hf_1" android:layout_marginTop="0dp"
                android:layout_height="wrap_content" android:paddingLeft="8dp" android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi," android:textColor="@color/accent_dark"
                    android:textSize="40dp" android:id="@+id/hf_hi"/>

            </RelativeLayout>



            <ir.afshin.stickyscrollviewlib.StickyHeader
                android:layout_width="match_parent"  android:id="@+id/hf_2"
                android:layout_height="wrap_content" android:layout_below="@+id/hf_1">
                <RelativeLayout
                    android:layout_width="match_parent"  android:id="@+id/hf_22"
                    android:layout_height="wrap_content" >
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent" android:layout_marginBottom="10dp" android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent" android:orientation="horizontal" android:id="@+id/hf_search_rl"
                    android:layout_height="wrap_content" android:padding="12dp" android:layout_marginTop="0dp" >

                    <TextView
                        android:layout_width="wrap_content" android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" android:layout_centerVertical="true"
