                        android:textSize="12dp" android:id="@+id/hf_search"/>

                    <ImageView
                        android:layout_width="20dp" android:layout_alignParentRight="true"
                        android:layout_height="20dp" android:layout_centerVertical="true"
                        android:src="@drawable/ic_search_pink_24dp"/>

                </RelativeLayout>
                    </android.support.v7.widget.CardView>

                </RelativeLayout>
            </ir.afshin.stickyscrollviewlib.StickyHeader>



            <RelativeLayout
