                                    android:textColor="@color/windowBackground" android:textSize="13dp" android:textStyle="bold"
                                    android:text="KNOW ABOUT YOUR MEDICATION"
                                    android:id="@+id/hf_textView45" />

                                <TextView
                                    android:layout_width="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/windowBackground" android:textSize="11dp" android:layout_marginTop="5dp"
                                    android:text="Get details about "
