                    android:layout_height="1.8dp" android:layout_centerHorizontal="true" />
                <TextView
                    android:layout_width="wrap_content" android:layout_margin="6dp" android:layout_below="@+id/l11"
                    android:layout_height="wrap_content" android:layout_centerVertical="true"
                    android:text="SERVICES" android:layout_centerHorizontal="true" android:textColor="@color/windowBackground"
                    android:textSize="12dp" android:id="@+id/hf_services_h"/>

                <View
                    android:layout_width="10dp" android:id="@+id/l12" android:layout_below="@+id/hf_services_h" android:layout_marginBottom="0dp" android:background="@color/accent_dark"
                    android:layout_height="2.8dp" android:layout_centerHorizontal="true" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent" android:id="@+id/hf_5" android:layout_below="@+id/hf_4"
                android:layout_height="wrap_content" >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent" android:layout_margin="8dp"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="match_parent"  android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="0dp" android:layout_weight="1"
                            android:layout_height="wrap_content" android:layout_marginTop="0dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                            android:id="@+id/hf_relative_layout2"  android:foreground="@drawable/custom_bg"
                            android:clickable="true">


                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp" android:layout_margin="15dp"
                                android:src="@drawable/alarm_clock_pink"
                                android:id="@+id/hf_imageView2"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:padding="5dp" android:layout_marginBottom="5dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/hf_imageView2"
                                android:layout_centerHorizontal="true">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/windowBackground" android:textSize="13dp" android:textStyle="bold"
                                    android:text="MEDS REMINDER" android:gravity="center"
                                    android:id="@+id/hf_textView25" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"  android:gravity="center"
                                    android:textColor="@color/windowBackground" android:textSize="9dp" android:layout_marginTop="5dp"
                                    android:text="Smart alerts for your medication."
                                    android:id="@+id/hf_textView24" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp" android:layout_weight="1"  android:foreground="@drawable/custom_bg"
                            android:clickable="true"
                            android:layout_height="wrap_content" android:layout_marginTop="0dp" android:layout_marginLeft="0dp" android:layout_marginRight="20dp"
                            android:id="@+id/hf_relative_layout3">


                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp" android:layout_margin="15dp"
                                android:src="@drawable/chatpink"
                                android:id="@+id/hf_imageView3"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent" android:layout_marginBottom="5dp"
                                android:padding="5dp" android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/hf_imageView3"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/windowBackground" android:textSize="13dp" android:textStyle="bold"
                                    android:text="CHAT ASSISTANT" android:gravity="center"
                                    android:id="@+id/hf_textView35" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:gravity="center"
                                    android:textColor="@color/windowBackground" android:textSize="9dp" android:layout_marginTop="5dp"
                                    android:text="A.I. bot to answer all your medicine related questions."
                                    android:id="@+id/hf_textView34" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent" android:id="@+id/hf_6" android:layout_below="@+id/hf_5"
                android:layout_height="wrap_content" android:layout_marginTop="4dp">

                <View
                    android:layout_width="20dp" android:visibility="gone" android:layout_marginTop="8dp" android:id="@+id/l21" android:background="@color/windowBackground"
                    android:layout_height="1.8dp" android:layout_centerHorizontal="true" />
                <TextView
                    android:layout_width="wrap_content" android:layout_margin="6dp" android:layout_below="@+id/l21"
                    android:layout_height="wrap_content" android:layout_centerVertical="true"
