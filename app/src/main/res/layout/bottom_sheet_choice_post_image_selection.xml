<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
android:layout_width="match_parent"
android:id="@+id/popup_window"
android:layout_height="match_parent"
android:layout_margin="0dp"
android:padding="0dp"
xmlns:android="http://schemas.android.com/apk/res/android">



<RelativeLayout
    android:layout_width="match_parent" android:padding="16dp"
    android:layout_height="wrap_content" android:layout_marginTop="105dp"
    android:id="@+id/RLayout" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.55dp"
        android:id="@+id/blackline_md3" android:orientation="horizontal"
        android:background="@color/black" android:layout_above="@+id/tv2"
        android:layout_marginLeft="5dp" android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp">
    </LinearLayout>



    <TextView
        android:id="@+id/tv2" android:text="How do you want to confirm your order?" android:layout_marginLeft="13dp" android:layout_marginStart="10dp"
        android:layout_width="wrap_content" android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content" android:textSize="16dp"
        android:gravity="center_vertical|left"
        android:padding="2dp" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent" android:textSize="11dp"
        android:layout_height="wrap_content" android:layout_below="@+id/tv2"
        android:gravity="center_vertical|center_horizontal"
        android:padding="5dp" android:textColor="@color/base"
        android:text="Please select one."
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.55dp"
        android:id="@+id/blackline_md" android:orientation="horizontal"
        android:background="@color/black" android:layout_below="@+id/tv3"
        android:layout_marginLeft="5dp" android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp">
    </LinearLayout>

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="match_parent" android:textSize="13dp"
        android:layout_height="wrap_content" android:layout_below="@+id/blackline_md"
        android:gravity="left|center_horizontal" android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="15dp" android:textColor="@color/jumbo"
        android:text="I want to specify the medicines by marking on the prescription photos."
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.35dp" android:background="@color/monsoon"
        android:layout_marginLeft="87dp" android:layout_below="@+id/txt_1"
        android:layout_marginStart="87dp" android:id="@+id/b12"
        android:layout_marginEnd="87dp" android:orientation="horizontal"
        android:layout_marginRight="87dp">
    </LinearLayout>


    <TextView
        android:id="@+id/txt_2"
        android:layout_width="match_parent" android:textSize="13dp"
        android:layout_height="wrap_content" android:layout_below="@+id/b12"
        android:gravity="left|center_horizontal" android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="15dp" android:textColor="@color/jumbo"
        android:text="I will confirm the medicines and their quantities when the ProjectX pharmacist calls."
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.55dp"
        android:id="@+id/blackline_md2" android:orientation="horizontal"
        android:background="@color/black" android:layout_below="@+id/txt_2"
        android:layout_marginLeft="5dp" android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp">
    </LinearLayout>


</RelativeLayout>

</android.support.v7.widget.CardView>