<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white">



    <RelativeLayout
        android:layout_width="match_parent" android:id="@+id/title_ll_ty"
        android:layout_height="wrap_content" android:background="@color/steel">

        <TextView
            android:layout_width="match_parent" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_height="wrap_content" android:textColor="@color/windowBackground" android:layout_marginTop="12dp"
            android:text="TrueMD" android:textSize="25sp" android:gravity="center"
            android:id="@+id/titleOM"  />

        <ImageButton
            android:layout_width="28dp" android:background="@drawable/ic_arrow_back_p_24dp"
            android:layout_height="28dp" android:layout_alignParentLeft="true" android:layout_marginLeft="12dp" android:layout_marginTop="14dp"
            android:id="@+id/backImageButtonOM"  />

        </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent" android:layout_below="@+id/title_ll_ty"
        android:layout_height="wrap_content" android:paddingBottom="7dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent" android:background="@color/steel" android:layout_marginRight="-12dp" android:layout_marginLeft="-12dp"
                android:layout_height="15dp" android:orientation="vertical"  android:layout_marginTop="0dp" android:id="@+id/b5">

            </LinearLayout>


            <TextView
            android:layout_width="match_parent" android:layout_below="@id/b5" android:gravity="center_horizontal" android:textSize="15.5sp"
            android:layout_height="wrap_content" android:textColor="@color/windowBackground" android:layout_alignParentLeft="true"
            android:text="Thank you" android:layout_marginLeft="5dp" android:layout_marginTop="12dp"
            android:id="@+id/textView4OM" />



        <ImageView
            android:layout_width="55dp" android:layout_below="@+id/textView4OM" android:layout_centerHorizontal="true"
            android:layout_height="55dp" android:src="@drawable/ic_circle_check_128" android:layout_marginTop="2dp"
            android:id="@+id/imageViewgreencircle" />


        <TextView
            android:layout_width="match_parent" android:gravity="center_horizontal" android:textSize="13.5dp" android:layout_below="@+id/imageViewgreencircle"
            android:layout_height="wrap_content" android:textColor="@color/monsoon" android:layout_marginLeft="5dp" android:layout_marginTop="3dp"
            android:text="Your order has been placed successfully" android:layout_alignParentLeft="true"
            android:id="@+id/textView5OM" />

        <LinearLayout
            android:layout_width="match_parent" android:background="@color/steel" android:layout_marginRight="-12dp" android:layout_marginLeft="-12dp"
            android:layout_height="10dp" android:orientation="vertical" android:layout_below="@id/textView5OM" android:layout_marginTop="10dp" android:id="@+id/b1">

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content" android:layout_centerHorizontal="true" android:layout_below="@+id/b1" android:layout_marginTop="10dp" android:paddingRight="20dp" android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" android:id="@+id/ll_orderid" android:gravity="center" android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content" android:text="ORDER ID" android:textSize="13.5dp" android:textColor="@color/windowBackground"
                    android:layout_height="wrap_content" android:padding="7dp" android:id="@+id/order_id_h"/>
                <TextView
                    android:layout_width="wrap_content" android:text="889132" android:textSize="12.5dp" android:textColor="@color/monsoon"
                    android:layout_height="wrap_content" android:padding="7dp" android:id="@+id/order_id_tv"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content" android:layout_marginLeft="85dp"
                android:layout_height="wrap_content" android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content" android:text="DELIVERY TIME" android:textSize="13.5dp" android:textColor="@color/windowBackground"
                    android:layout_height="wrap_content" android:padding="7dp" android:id="@+id/delivery_slot_h" />
                <TextView
                    android:layout_width="wrap_content" android:text="Today, 2:00 pm" android:textSize="12.5dp" android:textColor="@color/monsoon"
                    android:layout_height="wrap_content" android:padding="7dp" android:id="@+id/delivery_slot_tv"/>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content" android:layout_below="@+id/ll_orderid" android:layout_marginTop="15dp"
            android:layout_height="wrap_content" android:id="@+id/ll_delivery" android:layout_alignRight="@+id/ll_orderid" android:orientation="vertical" android:layout_alignLeft="@+id/ll_orderid">

            <TextView
                android:layout_width="wrap_content" android:text="DELIVERY ADDRESS" android:textSize="13.5dp" android:textColor="@color/windowBackground"
                android:layout_height="wrap_content" android:padding="7dp" android:id="@+id/delivery_add_h"/>
            <TextView
                android:layout_width="wrap_content" android:text="Name, Address Line 1, Address Line 2, Landmark, city- 890098" android:textSize="12.5dp" android:textColor="@color/monsoon"
                android:layout_height="wrap_content" android:padding="7dp" android:id="@+id/delivery_add_tv" />

            <TextView
                android:layout_width="wrap_content" android:visibility="visible" android:paddingBottom="0dp"
                android:layout_height="wrap_content" android:textColor="@color/windowBackground" android:layout_gravity="center"
                android:text="Please keep your prescription ready at the time of delivery."  android:layout_marginTop="10dp" android:layout_marginBottom="2dp"
                android:id="@+id/textView6OM"  android:gravity="center_horizontal" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent" android:background="@color/steel" android:layout_marginRight="-12dp" android:layout_marginLeft="-12dp"
            android:layout_height="10dp" android:orientation="vertical" android:layout_below="@id/ll_delivery" android:layout_marginTop="10dp" android:id="@+id/b2">

        </LinearLayout>

            <TextView
                android:layout_width="wrap_content" android:layout_marginTop="6dp" android:text="PAYMENT DETAILS"  android:textSize="15.5dp" android:textColor="@color/windowBackground"
                android:layout_height="wrap_content" android:layout_alignLeft="@+id/ll_totalid" android:padding="5dp" android:id="@+id/total_id_title" android:layout_below="@+id/b2"/>
            <LinearLayout
                android:layout_width="match_parent" android:background="@color/steel" android:layout_marginRight="-12dp" android:layout_marginLeft="-12dp"
                android:layout_height="1dp" android:orientation="vertical"  android:layout_below="@+id/total_id_title" android:layout_marginTop="2dp" android:id="@+id/b4">

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content" android:layout_centerHorizontal="true" android:layout_below="@+id/b4" android:layout_marginTop="10dp" android:paddingRight="20dp" android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" android:id="@+id/ll_totalid" android:gravity="center" android:orientation="horizontal" android:layout_marginRight="24dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content" android:text="GRAND TOTAL"  android:textSize="13.5dp" android:textColor="@color/windowBackground"
                        android:layout_height="wrap_content" android:padding="7dp" android:layout_marginTop="5dp" android:id="@+id/total_id_h"/>
                    <TextView
                        android:layout_width="wrap_content" android:text="to be decided after our pharmacists digitize your prescription. " android:textSize="12.5dp" android:textColor="@color/monsoon"
                        android:layout_height="wrap_content" android:padding="7dp" android:id="@+id/total_id_tv"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content" android:layout_below="@+id/ll_totalid" android:layout_marginTop="15dp"
                android:layout_height="wrap_content" android:id="@+id/ll_coupon" android:layout_alignRight="@+id/ll_orderid" android:orientation="vertical" android:layout_alignLeft="@+id/ll_totalid">

                <TextView
                    android:layout_width="wrap_content" android:text="COUPONS APPLIED" android:textSize="13.5dp" android:textColor="@color/windowBackground"
                    android:layout_height="wrap_content" android:padding="7dp" android:id="@+id/coupon_add_h"/>
                <TextView
                    android:layout_width="wrap_content" android:text="You'll get Rs. 100 off on your order" android:textSize="12.5dp" android:textColor="@color/monsoon"
                    android:layout_height="wrap_content" android:padding="7dp" android:id="@+id/coupon_add_tv" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent" android:background="@color/steel" android:layout_marginRight="-12dp" android:layout_marginLeft="-12dp"
                android:layout_height="10dp" android:orientation="vertical" android:layout_below="@id/ll_delivery" android:layout_marginTop="10dp" android:id="@+id/b3">

            </LinearLayout>


            <TextView
                android:layout_width="match_parent" android:textColor="@color/windowBackground"
                android:layout_height="wrap_content" android:background="@drawable/button_purple_ghost" android:padding="13dp"
                android:text="KNOW MORE ABOUT YOUR MEDICINES" android:textSize="13dp" android:layout_marginTop="10dp"
                android:id="@+id/refillButtonOM"  android:gravity="center_horizontal|center_vertical"
                android:layout_below="@id/ll_coupon"
                android:layout_alignLeft="@+id/uploadPrescriptionButtonOM"
                android:layout_alignStart="@+id/uploadPrescriptionButtonOM"
                android:layout_alignRight="@+id/uploadPrescriptionButtonOM"
                android:layout_alignEnd="@+id/uploadPrescriptionButtonOM"/>


            <TextView
                android:layout_width="match_parent" android:textColor="@color/white" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:layout_marginTop="7.5dp"
                android:layout_height="wrap_content" android:layout_below="@id/refillButtonOM" android:layout_marginBottom="6.5dp"
                android:text="CHAT WITH OUR A.I. BOT" android:background="@drawable/button_purple" android:padding="13dp" android:textSize="13dp"
                android:id="@+id/uploadPrescriptionButtonOM" android:gravity="center_horizontal|center_vertical"  />








        </RelativeLayout>
    </ScrollView>





</RelativeLayout>