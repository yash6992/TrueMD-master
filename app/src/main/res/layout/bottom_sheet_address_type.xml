<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:id="@+id/popup_window"
    android:layout_height="wrap_content" android:background="@color/windowBackground"
    android:layout_margin="16dp"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <RelativeLayout
        android:layout_width="match_parent" android:padding="0dp"
        android:layout_height="wrap_content" android:layout_marginTop="5dp"
        android:id="@+id/RLayout">


        <TextView
            android:id="@+id/tv2" android:text="Select address type" android:layout_marginLeft="13dp" android:layout_marginStart="10dp"
            android:layout_width="wrap_content" android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" android:textSize="15sp"
            android:gravity="center_vertical|left"
            android:padding="2dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.35dp" android:layout_marginBottom="10dp"
            android:id="@+id/blackline_md" android:orientation="horizontal"
            android:background="@color/monsoon" android:layout_below="@+id/tv2"
            android:layout_marginLeft="15dp" android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp">
        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent" android:orientation="vertical"
        android:layout_height="wrap_content" android:layout_below="@id/blackline_md" >

    <LinearLayout
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp">



        <RelativeLayout
            android:layout_width="match_parent" android:padding="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/home_list" android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center"
                android:textSize="12.5dp" android:textStyle="bold" android:textColor="@color/monsoon"
                android:text="Home" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.25dp" android:background="@color/colorPrimary"
                android:layout_marginLeft="20dp" android:layout_marginTop="10dp"
                android:layout_marginStart="20dp" android:layout_below="@+id/home_list"
                android:layout_marginEnd="20dp" android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp">

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cardview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp">



        <RelativeLayout
            android:layout_width="match_parent" android:padding="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/office_list" android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center"
                android:textSize="12.5dp" android:textStyle="bold" android:textColor="@color/monsoon"
                android:text="Office" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.25dp" android:background="@color/colorPrimary"
                android:layout_marginLeft="20dp" android:layout_marginTop="10dp"
                android:layout_marginStart="20dp" android:layout_below="@+id/office_list"
                android:layout_marginEnd="20dp" android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp">

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cardview3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp">



        <RelativeLayout
            android:layout_width="match_parent" android:padding="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/other_list"
                android:layout_width="match_parent" android:layout_margin="4dp"
                android:layout_height="wrap_content" android:gravity="center"
                android:textSize="12.5dp" android:textStyle="bold" android:textColor="@color/monsoon"
                android:text="Other" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.25dp" android:background="@color/colorPrimary"
                android:layout_marginLeft="20dp" android:layout_marginTop="10dp"
                android:layout_marginStart="20dp" android:layout_below="@+id/other_list"
                android:layout_marginEnd="20dp" android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp" />
        </RelativeLayout>
    </LinearLayout>

    </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>