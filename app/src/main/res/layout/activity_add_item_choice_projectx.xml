<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent" android:background="@color/toolbar_bg"
    android:layout_height="match_parent" android:gravity="center_horizontal">


    <RelativeLayout
        android:layout_width="match_parent" android:id="@+id/main_toolbar"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/toolbar"
            android:background="@color/toolbar_bg">
            <ImageView
                android:layout_width="30dp" android:layout_margin="10dp"
                android:layout_height="30dp" android:padding="3dp"
                android:id="@+id/btn_back" android:src="@drawable/icic_nav_back_button"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <com.truemdhq.projectx.views.TextViewFont3Medium
                android:layout_width="140dp" android:layout_centerInParent="true" android:layout_margin="12dp"
                android:layout_height="wrap_content" android:textColor="@color/primary_violet" android:layout_marginTop="6dp"
                android:text="Add Item"  android:gravity="center"
                android:id="@+id/hf_title"  />


            <ImageView
                android:layout_width="30dp" android:layout_margin="10dp"
                android:layout_height="30dp" android:padding="0dp"
                android:id="@+id/btn_search" android:src="@drawable/ic_icic_nav_settings_violet"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent" android:layout_below="@+id/toolbar"
            android:layout_height="3dp" android:background="@drawable/shape7" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent" android:id="@+id/choose_from_list"
        android:layout_height="0dp" android:layout_weight="1" android:layout_marginLeft="40dp">


        <ImageView
            android:layout_width="60dp" android:src="@drawable/trolley"
            android:layout_height="60dp" android:id="@+id/image1" android:layout_centerVertical="true" />

        <com.truemdhq.projectx.views.TextViewFont2Medium
            android:layout_width="wrap_content" android:text="Pick Items from List"
            android:layout_toRightOf="@+id/image1" android:layout_marginLeft="20dp" android:textColor="@color/primary_blue"
            android:layout_height="wrap_content" android:layout_centerVertical="true" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content" android:orientation="horizontal"
        android:layout_height="wrap_content" android:gravity="center" >

        <View
            android:layout_width="100dp"
            android:layout_height="0.5dp" android:background="@color/disabled" />

        <com.truemdhq.projectx.views.TextViewFont1Small
            android:layout_width="wrap_content" android:textColor="@color/disabled"
            android:layout_height="wrap_content" android:text="OR" android:layout_margin="5dp" />

        <View
            android:layout_width="100dp"
            android:layout_height="0.5dp" android:background="@color/disabled" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent" android:id="@+id/barcode_scan"
        android:layout_height="0dp" android:layout_weight="1" android:layout_marginLeft="40dp">


        <ImageView
            android:layout_width="60dp" android:src="@drawable/barcode_scanner"
            android:layout_height="60dp" android:id="@+id/image2" android:layout_centerVertical="true" />

        <com.truemdhq.projectx.views.TextViewFont2Medium
            android:layout_width="wrap_content" android:text="Scan Barcode "
            android:layout_toRightOf="@+id/image2" android:layout_marginLeft="20dp" android:textColor="@color/primary_blue"
            android:layout_height="wrap_content" android:layout_centerVertical="true" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content" android:orientation="horizontal"
        android:layout_height="wrap_content" android:gravity="center" >

        <View
            android:layout_width="100dp"
            android:layout_height="0.5dp" android:background="@color/disabled" />

        <com.truemdhq.projectx.views.TextViewFont1Small
            android:layout_width="wrap_content" android:textColor="@color/disabled"
            android:layout_height="wrap_content" android:text="OR" android:layout_margin="5dp" />

        <View
            android:layout_width="100dp"
            android:layout_height="0.5dp" android:background="@color/disabled" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent" android:id="@+id/add_item_to_list"
        android:layout_height="0dp" android:layout_weight="1" android:layout_marginLeft="40dp">


        <ImageView
            android:layout_width="60dp" android:src="@drawable/add_item"
            android:layout_height="60dp" android:id="@+id/image3" android:layout_centerVertical="true" />

        <com.truemdhq.projectx.views.TextViewFont2Medium
            android:layout_width="wrap_content" android:text="Add Item to List"
            android:layout_toRightOf="@+id/image3" android:layout_marginLeft="20dp" android:textColor="@color/primary_blue"
            android:layout_height="wrap_content" android:layout_centerVertical="true" />

    </RelativeLayout>

</LinearLayout>