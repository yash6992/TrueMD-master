<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingTop="5dp" android:background="@drawable/button_flat_white">

    <TextView
        android:layout_width="wrap_content" android:textSize="14dp" android:textColor="@color/windowBackground"
        android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
        android:text="New Text"
        android:id="@+id/pm_med_name" />

    <TextView
        android:layout_width="wrap_content" android:textSize="11dp" android:textColor="@color/white"
        android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_marginRight="10dp"
        android:text="New Text" android:background="@drawable/shape2" android:layout_alignBottom="@+id/pm_med_name"
        android:id="@+id/pm_med_type" />

    <TextView
        android:layout_width="wrap_content" android:textSize="12dp" android:textColor="@color/monsoon"
        android:layout_height="wrap_content"  android:layout_alignLeft="@+id/pm_med_name"
        android:text="New Text"  android:layout_alignTop="@+id/pm_duration_h" android:layout_toLeftOf="@+id/pm_duration_h"
        android:id="@+id/pm_frequency" />

    <TextView
        android:layout_width="wrap_content" android:textSize="12dp" android:textColor="@color/aluminum"
        android:layout_height="wrap_content" android:layout_alignBottom="@+id/pm_duration"
        android:text="DURATION: " android:layout_toLeftOf="@+id/pm_duration" android:layout_marginRight="5dp"
        android:id="@+id/pm_duration_h" />

    <TextView
        android:layout_width="wrap_content" android:textSize="12dp" android:textColor="@color/monsoon"
        android:layout_height="wrap_content" android:layout_below="@id/pm_med_type" android:layout_marginTop="10dp"
        android:text="New Text" android:layout_alignParentRight="true" android:layout_marginRight="10dp"
        android:id="@+id/pm_duration" />

    <TextView
        android:layout_width="100dp" android:textSize="10dp" android:textColor="@color/aluminum"
        android:layout_height="wrap_content" android:layout_below="@+id/pm_frequency"
        android:text="New Text" android:layout_alignLeft="@+id/pm_med_name" android:layout_marginTop="10dp"
        android:id="@+id/pm_meal" />

    <LinearLayout
        android:orientation="horizontal" android:layout_toRightOf="@+id/pm_meal" android:layout_marginTop="10dp"
        android:layout_width="match_parent" android:layout_below="@+id/pm_duration" android:layout_marginLeft="100dp"
        android:layout_height="wrap_content" android:id="@+id/maen" android:layout_marginRight="0dp">


        <LinearLayout
            android:layout_width="0dp" android:layout_weight="1" android:layout_gravity="center"
            android:layout_height="wrap_content" >
        <ImageView
            android:layout_width="20dp" android:src="@drawable/morning_b"
            android:layout_height="20dp" android:background="@drawable/shape_circle_morning"
            android:id="@+id/pm_morning" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp" android:layout_weight="1" android:layout_gravity="center"
        android:layout_height="wrap_content" >
        <ImageView
            android:layout_width="20dp" android:src="@drawable/afternoon_b" android:layout_gravity="center_horizontal"
            android:layout_height="20dp" android:background="@drawable/shape_circle_evening"
            android:id="@+id/pm_afternoon" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp" android:layout_weight="1" android:layout_gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="20dp" android:src="@drawable/evening_b"
            android:layout_height="20dp"   android:background="@drawable/shape_circle_evening"
            android:id="@+id/pm_evening" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp" android:layout_weight="1" android:layout_gravity="center"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="18dp" android:src="@drawable/night_b"
            android:layout_height="18dp"  android:background="@drawable/shape_circle_night"
            android:id="@+id/pm_night" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:orientation="horizontal" android:id="@+id/b1" android:background="@color/windowBackground"
        android:layout_height="0.3dp" android:layout_marginRight="10dp" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_below="@+id/maen" android:layout_marginBottom="5dp">
    </LinearLayout>


</RelativeLayout>