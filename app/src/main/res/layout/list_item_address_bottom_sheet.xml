<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp">



        <RelativeLayout
            android:layout_width="match_parent" android:paddingRight="20dp" android:paddingTop="3dp" android:paddingBottom="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name_list_item_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12.5dp" android:textStyle="bold" android:textColor="@color/colorPrimary"
                android:text="TextView" />
            <TextView
                android:id="@+id/manufacturer_list_item_search"
                android:layout_gravity="left" android:layout_below="@+id/name_list_item_search"
                android:layout_width="wrap_content" android:layout_marginTop="11.5dp"
                android:layout_height="wrap_content"
                android:textSize="10dp" android:textColor="@color/monsoon"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.25dp" android:background="@color/colorPrimary"
                android:layout_marginLeft="20dp" android:layout_marginTop="10dp"
                android:layout_marginStart="20dp" android:layout_below="@+id/manufacturer_list_item_search"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp">

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>