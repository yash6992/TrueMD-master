<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item >
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <stroke android:width="4dp" android:color="#CABBBBBB" />

        <padding android:left="0dp" android:top="0dp"
            android:right="0dp" android:bottom="1dp" />
        <corners android:radius="20dp" />
    </shape>
</item>
<item android:right="2dp" android:left="0dp" android:bottom="2dp">
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <stroke android:width="0.5dp" android:color="@color/colorPrimaryDark" />
        <solid android:color="@android:color/white"/>
        <padding android:left="0dp" android:top="0dp"
            android:right="0dp" android:bottom="1dp" />
        <corners android:radius="20dp" />
    </shape>
</item>
</layer-list>