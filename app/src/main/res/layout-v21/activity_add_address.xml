<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/steel"
    android:layout_height="match_parent"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="match_parent" android:padding="0dp"
        android:layout_height="wrap_content" android:id="@+id/title_ll_aa">

        <TextView
            android:layout_width="wrap_content" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_height="30dp" android:textColor="@color/windowBackground" android:layout_marginTop="0dp"
            android:text="ADD AN ADDRESS" android:textSize="16dp" android:gravity="center"
            android:id="@+id/titleAA" />

        <ImageButton
            android:layout_width="28dp" android:background="@drawable/ic_arrow_back_p_24dp"
            android:layout_height="28dp" android:layout_alignParentLeft="true" android:layout_marginLeft="12dp" android:layout_marginTop="3dp"
            android:id="@+id/backImageButtonAA" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent" android:id="@+id/svAA" android:layout_marginTop="20dp"
        android:layout_height="wrap_content" android:layout_below="@+id/title_ll_aa">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent" android:padding="8dp" android:id="@+id/name_rl"
                android:layout_height="wrap_content" android:background="@drawable/shape_purple_ghost_squ">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent" android:background="@drawable/shape_steel_ghost_squ"
                android:layout_height="wrap_content" android:id="@+id/address_typeLL"
                android:orientation="horizontal" android:layout_margin="4dp"
                android:padding="0dp">
                <TextView
                    android:text="CHOOSE"  android:id="@+id/choosetype"
                    android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"
                    android:layout_width="wrap_content" android:layout_marginRight="12dp" android:textColor="@color/windowBackground" android:textSize="13dp" />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/typetil"
                    android:layout_marginTop="3dp" android:paddingRight="15dp" android:paddingLeft="15dp"
                    android:layout_marginBottom="0dp">
                    <EditText android:id="@+id/address_typeET" android:backgroundTint="#00000000"
                        android:layout_width="match_parent" android:textSize="11dp" android:layout_marginRight="100dp"
                        android:layout_height="wrap_content" android:singleLine="true"
                        android:inputType="text" android:textColor="@color/monsoon"
                        android:hint="Address Type (eg: Home, Office etc.)"/>
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent" android:background="@drawable/shape_steel_ghost_squ"
                android:layout_height="wrap_content" android:id="@+id/nameLL" android:layout_below="@+id/address_typeLL"
                android:orientation="horizontal" android:layout_margin="4dp"
                android:padding="0dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp" android:paddingRight="15dp" android:paddingLeft="15dp"
                    android:layout_marginBottom="0dp">
                    <EditText android:id="@+id/nameET" android:backgroundTint="#00000000"
                        android:layout_width="match_parent" android:singleLine="true"
                        android:layout_height="wrap_content" android:textSize="11dp"
                        android:inputType="text" android:textColor="@color/monsoon"
                        android:hint="Name"/>
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent" android:id="@+id/add_rl" android:padding="8dp" android:layout_marginTop="18dp" android:layout_below="@+id/name_rl"
                android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent" android:background="@drawable/shape_steel_ghost_squ"
                android:layout_height="wrap_content" android:id="@+id/address1LL"
                android:orientation="horizontal" android:layout_margin="4dp"
                android:padding="0dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp" android:paddingRight="15dp" android:paddingLeft="15dp"
                    android:layout_marginBottom="0dp">
                    <EditText android:id="@+id/address1ET" android:backgroundTint="#00000000"
                        android:layout_width="match_parent" android:singleLine="true"
                        android:layout_height="wrap_content" android:textSize="11dp"
                        android:inputType="text" android:textColor="@color/monsoon"
                        android:hint="Address Line 1"/>
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent" android:background="@drawable/shape_steel_ghost_squ"
                android:layout_height="wrap_content" android:id="@+id/address2LL" android:layout_below="@+id/address1LL"
                android:orientation="horizontal" android:layout_margin="4dp"
                android:padding="0dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp" android:paddingRight="15dp" android:paddingLeft="15dp"
                    android:layout_marginBottom="0dp">
                    <EditText android:id="@+id/address2ET" android:backgroundTint="#00000000"
                        android:layout_width="match_parent" android:singleLine="true"
                        android:layout_height="wrap_content" android:textSize="11dp"
                        android:inputType="text" android:textColor="@color/monsoon"
                        android:hint="Address Line 2"/>
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent" android:background="@drawable/shape_steel_ghost_squ"
                android:layout_height="wrap_content" android:id="@+id/landmarkLL" android:layout_below="@+id/address2LL"
                android:orientation="horizontal" android:layout_margin="4dp"
                android:padding="0dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp" android:paddingRight="15dp" android:paddingLeft="15dp"
                    android:layout_marginBottom="0dp">
                    <EditText android:id="@+id/landmarkET" android:backgroundTint="#00000000"
                        android:layout_width="match_parent" android:singleLine="true"
                        android:layout_height="wrap_content" android:textSize="11dp"
                        android:inputType="text" android:textColor="@color/monsoon"
                        android:hint="Landmark"/>
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent" android:layout_below="@+id/landmarkLL"
                android:layout_height="wrap_content" android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="fill_parent" android:background="@drawable/shape_steel_ghost_squ"
                android:layout_height="wrap_content" android:id="@+id/city_ll"  android:layout_weight="1"
                android:orientation="horizontal" android:layout_margin="4dp"  android:layout_alignParentLeft="true"
                android:padding="0dp" >

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp" android:paddingRight="15dp" android:paddingLeft="15dp"
                    android:layout_marginBottom="0dp">
                    <EditText android:id="@+id/cityET"
                        android:layout_width="match_parent" android:singleLine="true"
                        android:layout_height="wrap_content" android:textSize="11dp"
                        android:inputType="text" android:textColor="@color/monsoon" android:backgroundTint="#00000000"
                        android:hint="City"/>
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent" android:background="@drawable/shape_steel_ghost_squ"
                    android:layout_height="wrap_content" android:id="@+id/pincodeLL" android:layout_weight="1"
                    android:orientation="horizontal" android:layout_margin="4dp" android:layout_alignParentRight="true"
                    android:padding="0dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp" android:paddingRight="15dp" android:paddingLeft="15dp"
                        android:layout_marginBottom="0dp">
                        <EditText android:id="@+id/pincodeET"
                            android:layout_width="match_parent" android:textSize="11dp" android:backgroundTint="#00000000"
                            android:layout_height="wrap_content" android:singleLine="true"
                            android:inputType="number" android:textColor="@color/monsoon"
                            android:hint="Pin Code" android:maxLength="6"/>
                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>


            </LinearLayout>

            </RelativeLayout>

            </android.support.v7.widget.CardView>

            <com.zl.reik.dilatingdotsprogressbar.DilatingDotsProgressBar
                android:id="@+id/progress_aa" android:layout_marginTop="10dp" android:layout_marginBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:radius="2dp"
                android:color="@color/windowBackground"
                app:dd_numDots="6" android:layout_centerInParent="true"
                app:dd_scaleMultiplier="2.3" app:dd_animationDuration="500"
                app:dd_horizontalSpacing="12dp" android:layout_below="@+id/add_rl"
                />

            <android.support.v7.widget.AppCompatButton
                android:layout_width="match_parent" android:layout_marginTop="10dp" android:backgroundTint="@color/windowBackground" android:padding="13dp"
                android:layout_height="56dp" android:textColor="@color/white" android:textSize="15dp"
                 android:layout_below="@+id/progress_aa" android:id="@+id/save_tv_aa" android:gravity="center" android:text="SAVE ADDRESS"/>


        </RelativeLayout>

    </ScrollView>



</RelativeLayout>